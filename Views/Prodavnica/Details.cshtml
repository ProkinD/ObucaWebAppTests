@model ObućaWebApp.Models.Prodavnica

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalji</h2>

<div>
    <h4>Prodavnica</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adresa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kontakt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kontakt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.URLSlike)
        </dt>
        <dd class="col-sm-10">

            <img class="img-thumbnail" src="@Html.DisplayFor(model => model.URLSlike)" alt="Slika prodavnice" />
        </dd>
    </dl>
    <h4>Artikli u prodavnici :</h4>
    <dl class="row">

        @foreach (var artikal in Model.Obuce)
        {
        <dt class="col-sm-3">
            <a href="../../../Obuca/Details/@artikal.ObucaId">
                @artikal.Naziv
            </a>
        </dt>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Ažuriraj", "Edit", new { id = Model.ProdavnicaId }) |
    @Html.ActionLink("Nazad na listu", "Index")
</p>

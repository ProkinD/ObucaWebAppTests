@model IEnumerable<ObućaWebApp.Models.Obuca>

@{
    ViewBag.Title = "PretragaObuce";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pretraži artikle</h2>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <div class="form-group">
                <label for="terminPretrage" class="control-label">Nađi prema imenu :</label>
                <input type="text" name="terminPretrage" value="@ViewData["CurrFilter"]" />
            </div>
            <div class="form-group">
            <input type="submit" value="Pretraži" class="btn btn-primary" />
            </div>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prodavnica.Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlSlike)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Velicina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kolicina)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td class="w-25">
                <a asp-action="Details" asp-route-id="@item.ObucaId">
                    <img class="img-fluid img-thumbnail" src="@Html.DisplayFor(modelItem => item.UrlSlike)" alt="Slika artikla" />
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prodavnica.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Velicina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kolicina)
            </td>
            <td>
                @Html.ActionLink("Ažuriraj", "Edit", new { id = item.ObucaId }) |
                @Html.ActionLink("Detalji", "Details", new { id = item.ObucaId }) |
                @Html.ActionLink("Obriši", "Delete", new { id = item.ObucaId })
            </td>
        </tr>
    }

</table>
